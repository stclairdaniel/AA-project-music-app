<form action="<%= tracks_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Track name:
    <input type="text" name="track[name]" value="<%= @track.name %>">
  </label>

  Track Type:
  Regular
  <input type="radio"
         name="track[track_type]"
         value="Regular"
         <%= "checked" if @track.track_type == 'Regular' %>>
  Bonus
  <input type="radio"
         name="track[track_type]"
         value="Bonus"
         <%= "checked" if @track.track_type == 'Bonus' %>>

  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%= album.id %>" <%= "selected" if @track.album_id == album.id %>"> <%= album.title %></option>
    <% end %>
  </select>

  <label>
    Lyrics
    <textarea name="track[lyrics]" rows="8" cols="40"><%= @track.lyrics %></textarea>
  </label>

  <input type="submit" value="Add Track">
</form>
