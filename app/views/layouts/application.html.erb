<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
    <% if current_user %>
      <%= button_to "Logout", session_url, method: :delete %>
    <% else %>
      <%= button_to "Sign Up", new_user_url, method: :get %>
      <%= button_to "Sign In", new_session_url, method: :get %>
    <% end %>
  </div>

  <ul>
    <% flash[:errors].try(:each) do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>

  <ul>
    <% flash[:notices].try(:each) do |notice| %>
      <li>
        <%= notice %>
      </li>
    <% end %>
  </ul>


<%= yield %>

</body>
</html>
